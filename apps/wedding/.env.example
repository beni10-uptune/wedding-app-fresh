# =====================================
# REQUIRED ENVIRONMENT VARIABLES
# =====================================

# Firebase Configuration (Required)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# Firebase Admin SDK (Required for server-side operations)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...your-private-key...\n-----END PRIVATE KEY-----\n"

# Stripe Configuration (Required for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Spotify Configuration (Required for music features)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id

# App URL (Required - Update for production)
NEXT_PUBLIC_APP_URL=https://weddings.uptune.xyz

# Domain Configuration (Required)
NEXT_PUBLIC_APP_DOMAIN=https://uptune.xyz
NEXT_PUBLIC_WEDDING_DOMAIN=https://weddings.uptune.xyz

# Admin/Seed Secret (Required - Use strong, unique values)
ADMIN_SECRET=your-strong-admin-secret-min-32-chars
NEXT_PUBLIC_SEED_SECRET=your-strong-seed-secret-min-32-chars

# =====================================
# RECOMMENDED ENVIRONMENT VARIABLES
# =====================================

# Rate Limiting (Highly recommended for production)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Error Tracking (Highly recommended for production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (Recommended)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =====================================
# OPTIONAL ENVIRONMENT VARIABLES
# =====================================

# Google Cloud (For AI features - optional)
GOOGLE_CLOUD_PROJECT=your-google-cloud-project
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Email Service (Optional - for transactional emails)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@weddings.uptune.xyz

# Monitoring (Optional)
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# =====================================
# DEVELOPMENT ONLY
# =====================================

# Local Development URLs (Do not use in production)
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# STRIPE_WEBHOOK_ENDPOINT_URL=http://localhost:3000/api/stripe/webhook

# =====================================
# NOTES
# =====================================
# 
# 1. Never commit actual values to version control
# 2. Use Vercel environment variables for production
# 3. Rotate secrets regularly
# 4. Use strong, unique values for all secrets
# 5. Enable 2FA on all service accounts
# 6. Monitor API usage and set up alerts
# 7. Test webhook endpoints with Stripe CLI first
#
# For Firebase Admin setup:
# 1. Go to Firebase Console > Project Settings > Service Accounts
# 2. Generate new private key
# 3. Copy values from the JSON file
# 4. Format FIREBASE_PRIVATE_KEY with \n for line breaks
#
# For Stripe webhook setup:
# 1. Go to Stripe Dashboard > Webhooks
# 2. Add endpoint: https://weddings.uptune.xyz/api/stripe/webhook
# 3. Select events: checkout.session.completed, payment_intent.succeeded
# 4. Copy the signing secret
#
# =====================================